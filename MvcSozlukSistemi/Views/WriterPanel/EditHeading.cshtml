@model Entity.Concrete.Heading
@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />



<form class="form-group" method="post">
    <input type="hidden" name="HeadingId" value="@Model.HeadingId" />
    <input type="text" placeholder="Başlık Adı" name="HeadingName" class="form-control" />
    <input type="text" placeholder="Başlık Adı" name="HeadingName" value="@Model.HeadingName" class="form-control" />
    <input type="text" placeholder="Tarih" name="HeadingDate" value="@Model.HeadingDate" class="form-control" />
    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
    <br />
    <button class="btn btn-sm btn-outline-primary">Kaydet</button>
</form>
